<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">

    <TextView
            android:text="Rommel Rico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView" android:textAlignment="center"
            android:textSize="30sp"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp" app:srcCompat="@drawable/me"
            android:id="@+id/imageView" android:layout_marginHorizontal="20dp" android:scaleType="fitCenter"/>
    <Button
            android:text="Work History"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/workHistoryButton"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"/>
    <Button
            android:text="Call Rommel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/callButton" android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"/>
    <Button
            android:text="Email Rommel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/emailButton" android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"/>
</LinearLayout>